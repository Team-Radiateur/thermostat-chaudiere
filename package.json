{
	"name": "chaudiere",
	"version": "1.0.0",
	"description": "Le tant attendu bot de la Team Radiateur",
	"main": "build/index.js",
	"scripts": {
		"clean": "rm -rf ./build",
		"compile": "npm run clean && tsc",
		"start": "npm run compile && node build/src/index.js",
		"lint": "eslint ./src --ext ts",
		"lint-fix": "eslint --fix ./src --ext ts",
		"setup": "mkdir ./data && cp ./resources/databases/bot.sqlite ./data/bot.sqlite",
		"prepare": "husky install"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"keywords": [],
	"author": "Christophe 'DrakeXorn' Bernard",
	"license": "MIT",
	"dependencies": {
		"@discordjs/builders": "0.15.0",
		"@discordjs/collection": "0.7.0",
		"@discordjs/opus": "0.7.0",
		"@discordjs/rest": "0.5.0",
		"@discordjs/voice": "0.10.0",
		"axios": "0.27.2",
		"better-sqlite3": "7.5.3",
		"bufferutil": "4.0.6",
		"discord-markdown": "2.5.1",
		"discord-music-player": "8.3.2",
		"discord.js": "13.8.1",
		"dotenv": "16.0.1",
		"erlpack": "0.1.4",
		"express": "4.18.1",
		"ffmpeg-static": "5.0.0",
		"fluent-ffmpeg": "^2.1.2",
		"sodium": "3.0.2",
		"string-progressbar": "1.0.4",
		"utf-8-validate": "5.0.9",
		"ytdl-core": "4.11.0",
		"zlib-sync": "0.1.7"
	},
	"devDependencies": {
		"@types/better-sqlite3": "7.5.0",
		"@types/express": "4.17.13",
		"@types/node": "18.0.0",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"discord-api-types": "0.35.0",
		"eslint": "8.18.0",
		"husky": "8.0.1",
		"lint-staged": "^13.0.3",
		"prettier-eslint": "15.0.1",
		"typescript": "4.7.4"
	},
	"eslintConfig": {
		"env": {
			"es2021": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"import/extensions": [
				0
			],
			"import/prefer-default-export": "off",
			"no-use-before-define": "off",
			"@typescript-eslint/no-use-before-define": [
				"error"
			],
			"indent": "off",
			"max-len": [
				"error",
				120
			],
			"semi": "error",
			"prefer-destructuring": "error",
			"space-in-parens": "off",
			"space-before-blocks": "warn",
			"object-curly-spacing": [
				"error",
				"always"
			],
			"no-trailing-spaces": "error",
			"@typescript-eslint/no-unused-vars": "error",
			"no-unused-vars": "off",
			"quotes": [
				"error",
				"double",
				{
					"allowTemplateLiterals": true
				}
			],
			"@typescript-eslint/indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			]
		}
	}
}
